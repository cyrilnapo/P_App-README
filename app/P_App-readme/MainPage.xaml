<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P_App_readme.MainPage"
             Title="Accueil">

    <StackLayout>
        <Label Text="Readme." VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" FontSize="50" TextDecorations="Underline" Margin="20"/>

        <ListView
            ItemsSource="{Binding Books}"
            SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Image}"
                                   Width="50"
                                   Height="50" />
                            <StackLayout>
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                        />
                                <Label Text="{Binding Author}"
                                       FontSize="16" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>